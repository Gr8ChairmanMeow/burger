<div class="container">
    <h1>Oh Burger My Burger</h1></div>
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>Let's burger!</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">EAT TIME!</button>
                    </form>
                    {{> burgers/delete-burger}}
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-5">
            <h2>Burgers in da TUMMY!</h2>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button type="submit">VOMIT UP!</button>
                    </form>
                    {{> burgers/delete-burger}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="container" id="clearDiv">
    <h2>Create a Burger</h2>
    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="sleepy">Sleepy?</label>
            <br>
            <input type="radio" name="devoured" value="1" checked> Ready to eat!
            <br>
            <input type="radio" name="devoured" value="0"> Devoured.
        </div>
